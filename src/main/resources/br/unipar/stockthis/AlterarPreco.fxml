<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="12" style="-fx-background-color: #181528; -fx-border-color: #7E57C2; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.unipar.stockthis.AlterarPrecoController">

    <children>
        <Label fx:id="lblTitulo" style="-fx-text-fill: #cfa8ff; -fx-font-size: 20px; -fx-font-weight: bold;" text="Produto" />

        <GridPane hgap="10" vgap="10">
            <children>
                <Label style="-fx-text-fill: white;" text="Preço antigo" GridPane.columnIndex="0" GridPane.rowIndex="0">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
                <TextField fx:id="txtPrecoAntigo" editable="false" style="-fx-border-color: #7E57C2; -fx-border-radius: 5; -fx-background-radius: 5; -fx-background-insets: 0;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label style="-fx-text-fill: white;" text="Preço novo" GridPane.columnIndex="0" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
                <TextField fx:id="txtPrecoNovo" promptText="Inserir novo valor" style="-fx-border-color: #7E57C2; -fx-border-radius: 5; -fx-background-radius: 5; -fx-background-insets: 0;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <HBox spacing="10">
            <children>
                <Button onAction="#cancelar" style="-fx-background-color: #d11a2a; -fx-text-fill: white; -fx-font-weight: bold;" text="Cancelar" />
                <Button onAction="#confirmar" style="-fx-background-color: #3bb54a; -fx-text-fill: white; -fx-font-weight: bold;" text="Alterar" />
            </children>
        </HBox>

        <Label fx:id="lblMensagem" textFill="RED" />
    </children>
</VBox>
