<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="508.0" prefWidth="668.0" style="-fx-background-color: #1E1E1E;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.unipar.stockthis.CadastroController">

    <children>
        <VBox alignment="CENTER" prefWidth="546.0" spacing="12" style="-fx-background-color: #1E1E1E;"
              AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <children>

                <Label alignment="CENTER" prefHeight="30.0" prefWidth="546.0"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;" text="StockThis">
                    <textFill>
                        <LinearGradient endX="0.98" endY="1.0" proportional="false" startX="0.81">
                            <stops>
                                <Stop>
                                    <color>
                                        <Color red="1.0" green="1.0" blue="1.0" />
                                    </color>
                                </Stop>
                                <Stop offset="1.0">
                                    <color>
                                        <Color red="1.0" green="0.1843" blue="1.0" />
                                    </color>
                                </Stop>
                            </stops>
                        </LinearGradient>
                    </textFill>
                </Label>

                <Label style="-fx-font-size: 20px;" text="Cadastro" textFill="WHITE" />
                <Separator opacity="0.0" orientation="VERTICAL" prefHeight="0.0" prefWidth="14.0" />

                <VBox maxWidth="340" spacing="8"
                      style="-fx-background-color: #181528; -fx-padding: 16; -fx-background-radius: 10; -fx-border-color: #7E57C2; -fx-border-radius: 10;">
                    <children>
                        <Label style="-fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold;"
                               text="Crie sua conta" />

                        <TextField fx:id="txtNome" promptText="Nome completo"
                                   style="-fx-background-color: #1C1C2B; -fx-border-color: #7E57C2; -fx-border-radius: 5;" />

                        <TextField fx:id="txtEmail" promptText="Email"
                                   style="-fx-background-color: #1C1C2B; -fx-border-color: #7E57C2; -fx-border-radius: 5;" />

                        <PasswordField fx:id="txtSenha" promptText="Senha"
                                       style="-fx-background-color: #1C1C2B; -fx-border-color: #7E57C2; -fx-border-radius: 5;" />

                        <Button maxWidth="Infinity"
                                onAction="#cadastrar"
                                style="-fx-background-radius: 10; -fx-background-color: #8e5cff; -fx-text-fill: white;"
                                text="Registrar">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>

                        <Label fx:id="lblMensagem" textFill="WHITE" style="-fx-font-size: 12px;" />

                        <Hyperlink onAction="#voltarLogin" text="Login" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Hyperlink>
                    </children>
                </VBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
