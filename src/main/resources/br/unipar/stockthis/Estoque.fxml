<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.unipar.stockthis.EstoqueController">

    <left>
        <VBox prefWidth="150" spacing="16" style="-fx-background-color: #181528; -fx-border-color: #7E57C2; -fx-padding: 20;">
            <children>
                <Button maxWidth="Infinity" style="-fx-background-radius: 12; -fx-background-color: #f5f0ff; -fx-text-fill: #3b285e; -fx-font-weight: bold;" text="Estoque" />
                <Button maxWidth="Infinity" onAction="#irParaDashboard" style="-fx-background-radius: 12; -fx-background-color: #c5b5ff; -fx-text-fill: #181528; -fx-font-weight: bold;" text="Dashboard" />
            </children>
        </VBox>
    </left>

    <top>
        <HBox spacing="10" style="-fx-background-color: #181528; -fx-border-color: #7E57C2; -fx-padding: 16;">
            <children>
            <Separator opacity="0.0" prefHeight="0.0" prefWidth="1.0" />
                <Label style="-fx-text-fill: #e5dbff; -fx-font-size: 18px; -fx-font-weight: bold;" text="Olá, usuário" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="12" style="-fx-padding: 20; -fx-background-color: #1E1E1E;">
            <children>
                <HBox spacing="10">
                    <children>
                        <TextField fx:id="txtBusca" promptText="Buscar produto..." style="-fx-background-color: #efefff; -fx-border-color: #7E57C2; -fx-border-radius: 10; -fx-background-insets: 0; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></TextField>
                        <ComboBox fx:id="cbCategoria" promptText="Categoria" style="-fx-background-color: #efefff; -fx-border-color: #7E57C2; -fx-border-radius: 10; -fx-background-insets: 0; -fx-background-radius: 10;" />
                        <Button fx:id="btnNovoItem" onAction="#abrirNovoItem" style="-fx-background-radius: 20; -fx-background-color: #ff9b27; -fx-text-fill: white; -fx-font-weight: bold;" text="Novo Item" />
                    </children>
                </HBox>
                <TableView fx:id="tblProdutos" prefHeight="400" VBox.vgrow="ALWAYS" style="-fx-border-color: #7E57C2; -fx-background-color: #efefff; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;" >
                    <columns>


                        <TableColumn fx:id="colCodigo" prefWidth="80" style="-fx-background-color: #efefff; -fx-border-color: #000;" text="Código" />
                        <TableColumn fx:id="colNome" prefWidth="150" style="-fx-background-color: #efefff; -fx-border-color: #000;" text="Produto" />
                        <TableColumn fx:id="colCategoria" prefWidth="120" style="-fx-background-color: #efefff; -fx-border-color: #000;" text="Categoria" />
                        <TableColumn fx:id="colQuantidade" prefWidth="70" style="-fx-background-color: #efefff; -fx-border-color: #000;" text="Qtd." />
                        <TableColumn fx:id="colPreco" prefWidth="100" style="-fx-background-color: #efefff; -fx-border-color: #000;" text="Preço" />
                        <TableColumn fx:id="colAcao" prefWidth="160" style="-fx-background-color: #efefff; -fx-border-color: #000;" text="Ação" />
                    </columns>
                </TableView>

            </children>
        </VBox>
    </center>
</BorderPane>
