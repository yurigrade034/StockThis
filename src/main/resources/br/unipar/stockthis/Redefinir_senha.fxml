<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="508.0" prefWidth="668.0" style="-fx-background-color: #1E1E1E;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.unipar.stockthis.RedefinirSenhaController">

    <children>
        <VBox alignment="CENTER" spacing="12"
              AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="0">

            <children>

                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="StockThis">
                    <textFill>
                        <LinearGradient endX="1.0" endY="1.0" proportional="false" startX="0.8">
                            <stops>
                                <Stop>
                                    <color>
                                        <Color red="1" green="1" blue="1"/>
                                    </color>
                                </Stop>
                                <Stop offset="1.0">
                                    <color>
                                        <Color red="1" green="0.18" blue="1"/>
                                    </color>
                                </Stop>
                            </stops>
                        </LinearGradient>
                    </textFill>
                </Label>

                <Label style="-fx-font-size: 20px;" text="Redefinir senha" textFill="WHITE"/>

                <VBox maxWidth="360" spacing="8"
                      style="-fx-background-color: #181528; -fx-padding: 16; -fx-background-radius: 10; -fx-border-color: #7E57C2; -fx-border-radius: 10;">

                    <children>
                        <Label style="-fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold;"
                               text="Redefinir Senha"/>

                        <TextField fx:id="txtEmail" promptText="Email"
                                   style="-fx-background-color: #1C1C2B; -fx-border-color: #7E57C2; -fx-border-radius: 5;"/>

                        <PasswordField fx:id="txtNovaSenha" promptText="Nova senha"
                                       style="-fx-background-color: #1C1C2B; -fx-border-color: #7E57C2; -fx-border-radius: 5;"/>

                        <Button maxWidth="Infinity"
                                onAction="#alterarSenha"
                                style="-fx-background-radius: 10; -fx-background-color: #8e5cff; -fx-text-fill: white;"
                                text="Alterar senha">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>

                        <Label fx:id="lblMensagem" textFill="WHITE" style="-fx-font-size: 12px;"/>

                        <Hyperlink onAction="#voltarLogin" text="Login" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Hyperlink>

                    </children>
                </VBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
